<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RustWipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_darker</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.RustWipe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RustWipe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.RustWipe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TitleStyle">
        <item name="android:layout_marginTop">@dimen/medium_space</item>
        <item name="android:textColor">@color/orange_darker</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="CategStyle">
        <item name="android:layout_marginTop">@dimen/medium_space</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="DataStyle">
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:layout_marginStart">@dimen/small_space</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_black_lighter</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
</resources>